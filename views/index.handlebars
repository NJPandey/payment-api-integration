<section class="py-2">
  <div class="row">
    <div class="col-md-6 text-center">
      <h1 class="display-3 mt-3 pt-5">
        Buy Ebook in SingleClick
      </h1><p class="lead">enjoy best-seller in affordable price</p>
      <form action="/charge" method="POST">
        <script
          src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="{{stripePublishableKey}}"
          data-amount="2500"
          data-name="Lost Connections"
          data-description="Ebook written by Johann Hari"
          data-image="/img/marketplace.jpg"
          data-locale="auto">
        </script>
        <script>
          // Hide default stripe button
          document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
        </script>
        <button type="submit" class="btn btn-outline-dark text-white btn-lg">Purchase For $25</button>
      </form>
    </div>
    <div class="col-md-6">
      <img src="/img/book1.jpg" alt="" class="img-fluid">
    </div>
  </div>
</section>